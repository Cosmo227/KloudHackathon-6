{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Python (Black)",
            "type": "shell",
            "command": "black .",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Format YAML",
            "type": "shell",
            "command": "prettier --write \"**/*.yml\" \"**/*.yaml\"",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
